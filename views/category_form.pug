extends layout

block content
    h1= title
    form(action="" method="post")
        div.form-group
            label(for="category_name") Name
            input.form-control(type="text" id="category_name" name="category_name" value=(category ? category.name : ""))
        div.form-group
            label(for="category_description") Description
            textarea.form-control(id="category_description" name="category_description")=(category ? category.description : "")
        button.btn.btn-primary(type="submit") Submit
    if errors 
        ul
            for error in errors
                li!= error.msg